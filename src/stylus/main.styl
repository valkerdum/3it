// SECCION MARCAS
.seccion-marcas
    position relative
    min-height 585px

.listado-marcas
    .marca
        padding-left 0!important
        padding-right 0!important
        a
            display block
            height 290px
            overflow hidden
            position relative
            -webkit-tap-highlight-color #fe6159cc
            text-decoration none
            -webkit-transition .15s
            -moz-transition .15s
            -o-transition .15s
            transition .15s
            .bg1
                background no-repeat center center
                background-size cover
                -webkit-transform scale(1.1)
                -moz-transform scale(1.1)
                -o-transform scale(1.1)
                -ms-transform scale(1.1)
                transform scale(1.1)
            &:hover
                .bg1
                    -webkit-transform scale(1)
                    -moz-transform scale(1)
                    -o-transform scale(1)
                    -ms-transform scale(1)
                    transform scale(1)
                .bg2
                    opacity .8
                .i1
                    opacity 0
                    -webkit-transform translateY(100%)
                    -moz-transform translateY(100%)
                    -o-transform translateY(100%)
                    -ms-transform translateY(100%)
                    transform translateY(100%)
                .i2
                    opacity 1
                    -webkit-transform translateY(0)
                    -moz-transform translateY(0)
                    -o-transform translateY(0)
                    -ms-transform translateY(0)
                    transform translateY(0)
            .bg2
                opacity 0
                background-image linear-gradient(to bottom,#3097a8 0,#00748b 100%)
        &.marca-bch
            a
                .bg1
                    background-image url(images/marcas/bg-banco-chile.jpg)
                .logo-bch
                    width 260px
        &.marca-udla
            a
                .bg1
                    background-image url(images/marcas/bg-udla.jpg)
                .logo-udla
                    width 190px
        &.marca-intervalores
            a
                .bg1
                    background-image url(images/marcas/bg-intervalores.jpg)
                .logo-intervalores
                    width 330px
        &.marca-aiep
            a
                .bg1
                    background-image url(images/marcas/bg-aiep.jpg)
                .logo-aiep
                    width 190px
        &.marca-credichile
            a
                .bg1
                    background-image url(images/marcas/bg-credichile.jpg)
                .logo-credichile
                    width 298px
        &.marca-er
            a
                .bg1
                    background-image url(images/marcas/bg-er.jpg)
                .logo-er
                    width 130px
        .i2
            opacity 0
            -webkit-transform translateY(-100%)
            -moz-transform translateY(-100%)
            -o-transform translateY(-100%)
            -ms-transform translateY(-100%)
            transform translateY(-100%)

.listado-marcas .marca a .bg1,
.listado-marcas .marca a .bg2,
.listado-marcas .marca  .i1, 
.listado-marcas .marca .i2
    display block
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    -webkit-transition .35s
    -moz-transition .35s
    -o-transition .35s
    transition .35s

.listado-marcas .marca  .i1, .listado-marcas .marca .i2
    height auto
    bottom 0

.listado-marcas .marca .i1 img, 
.listado-marcas .marca .i1 svg, 
.listado-marcas .marca .i2 img, 
.listado-marcas .marca .i2 svg
    margin auto
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    fill #fff
    -webkit-transition fill .15s
    -moz-transition fill .15s
    -o-transition fill .15s
    transition fill .15s
    max-width 50%
    max-height 40%

