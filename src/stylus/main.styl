// NAVBAR 
menu
    display: block
    & > div
        position: absolute
        z-index: 2
        top: 0
        width: 250px
        height: 100%
        box-sizing: border-box
        -moz-box-sizing: border-box
        -webkit-transition: -webkit-transform ease 250ms
        -moz-transition: -webkit-transform ease 250ms
        -ms-transition: -webkit-transform ease 250ms
        -o-transition: -webkit-transform ease 250ms
        transition: -webkit-transform ease 250ms
        -webkit-transition: transform ease 250ms
        -moz-transition: transform ease 250ms
        -ms-transition: transform ease 250ms
        -o-transition: transform ease 250ms
        transition: transform ease 250ms
        &.right
            background: #6B1919
            right: -250px
        &.left
            background: #273D7A
            left: -250px
        & > menu-item
            display: block
            & > div
                float: left
                width: 100%
                margin: 0
                padding: 10px 15px
                border-bottom: solid 1px #555
                cursor: pointer
                box-sizing: border-box
                -moz-box-sizing: border-box
                color: #B0B0B0
                & > span
                    float: left
                    color: inherit
                &:hover
                    color: #F0F0F0
        &.show
            &.right
                transform: translate3d(-250px, 0, 0)
                -ms-transform: translate3d(-250px, 0, 0)
                -webkit-transform: translate3d(-250px, 0, 0)
                -o-transform: translate3d(-250px, 0, 0)
                -moz-transform: translate3d(-250px, 0, 0)
            &.left
                transform: translate3d(250px, 0, 0)
                -ms-transform: translate3d(250px, 0, 0)
                -webkit-transform: translate3d(250px, 0, 0)
                -o-transform: translate3d(250px, 0, 0)
                -moz-transform: translate3d(250px, 0, 0)
                

.navbar-icon
    background transparent
    border 0
    outline none
    position absolute
    top 15px
    right 10px
    z-index 60
    span.ico
        width 24px
        height 18px
        float right
        margin-left 8px
        position relative
        -webkit-transform rotate(0deg)
        -moz-transform rotate(0deg)
        -o-transform rotate(0deg)
        transform rotate(0deg)
        transition(0.5s)
        cursor pointer
    i
        background #00748b
        display block
        position absolute
        height 3px
        width 100%
        border-radius 2px
        opacity 1
        right 0
        -webkit-transform rotate(0deg)
        -moz-transform rotate(0deg)
        -o-transform rotate(0deg)
        transform rotate(0deg)
        transition(0.25s)
        &:first-child 
            top 2px
        &:nth-child(2) 
            left 3px
            top 8px
            width 18px
        &:nth-child(3) 
            top 14px
    &.toggle-open
        outline none
        position fixed
        i:nth-child(1)
            top 8px
            -webkit-transform rotate(135deg)
            -moz-transform rotate(135deg)
            -o-transform rotate(135deg)
            transform rotate(135deg)
        i:nth-child(2)            
            top 20px
        i:nth-child(3)
            top 8px
            -webkit-transform rotate(-135deg)
            -moz-transform rotate(-135deg)
            -o-transform rotate(-135deg)
            transform rotate(-135deg)
    &.toggle-close
        i
            background white
            height 2px
        

.nav-bar
    background $celeste
    box-shadow 0px 0px 35px 0px rgba(0,0,0, 0.35)
    height 100vh
    position absolute
    top 0
    right 0
    width 0
    z-index -1
    display flex
    align-items center
    justify-content center
    -webkit-transition .5s all
    transition .5s all
    ul
        margin 0
        padding 0
        height 65%
        display grid
        li
            display none
            list-style none
            padding 0
            margin 0
    a
        color transparent
        font-family $uniHeavy
        font-size 23px
        position relative
        text-transform uppercase
        &:hover
            text-decoration none
        &:not(.underline-none):hover:before 
              -webkit-transform scaleX(1)
              transform scaleX(1)
        &:before
            content ""
            position absolute
            bottom 0
            left 0
            width 0
            height 2px
            width 100%
            background-color $blanco
            animation width 0.3s
            -webkit-transform scaleX(0)
            transform scaleX(0)
            -webkit-transition all 0.2s
            transition all 0.2s
            border-radius 2px
    &.open
        width: 400px
        z-index 50
        -webkit-transition .5s all
        transition .5s all
        position fixed
        a
            color $blanco
        ul
            li
                display block
        @media (max-width: 400px)
            width 100%
    &.close
        -webkit-transition .5s all
        transition .5s all
        
