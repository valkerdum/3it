h2
  color $blanco
  font-family $uniBold
  font-size 25px
  margin-bottom 50px
.flex
  display flex!important
.view-contacto
  @media (max-width: 768px)
    display block!important
  .w-50
    width 50%
    @media (max-width: 990px)
      width 90%
    @media (max-width: 768px)
      width 100%
  .form-text
    .group
      position relative
      margin-bottom 40px

    input
      background transparent
      color rgba(255,255,255, .9)
      font-size 18px
      padding 10px 10px 10px 5px
      display block
      width 100%
      border none
      border-bottom 1px solid $blanco
      &:focus
        outline none
        & ~ .highlight
          -webkit-animation inputHighlighter 0.3s ease
          -moz-animation inputHighlighter 0.3s ease
          animation inputHighlighter 0.3s ease

    label
      color rgba(255, 255, 255, .4)
      font-size 20px
      font-family $uniBold
      position absolute
      pointer-events none
      left 5px
      top 10px
      transition 0.2s ease all
      -moz-transition 0.2s ease all
      -webkit-transition 0.2s ease all

    input:focus ~ label, input:valid ~ label,
    select:focus, .activeLabel
      top -20px
      font-size 16px
      color $blanco
    select
      color $blanco

    .bar
      position relative
      display block
      width 100%
      &:before
        left 50%
      &:after
        right 50%

    .bar:before, .bar:after
      content ''
      height 2px
      width 0
      bottom 1px
      position absolute
      background $celeste
      transition 0.2s ease all
      -moz-transition 0.2s ease all
      -webkit-transition 0.2s ease all

    input:focus ~ .bar:before, input:focus ~ .bar:after
      width 50%

    .highlight
      position absolute
      height 60%
      width 100px
      top 25%
      left 0
      pointer-events none
      opacity 0.5

    @-webkit-keyframes inputHighlighter {
      from{
        background #5264AE
      }
      to{
        width 0
        background transparent
      }
    }
    @-moz-keyframes inputHighlighter {
      from{
        background #5264AE
      }
      to{
        width 0
        background transparent
      }
    }
    @keyframes inputHighlighter {
      from{
        background #5264AE
      }
      to{
        width 0
        background transparent
      }
    }
  .wrap-step
    height 120px
    position absolute
    left 0
    top 0
    z-index 10
  .steps
    color $blanco
    font-family $uniBold
    font-size 29px
    margin 40px 0 30px
    padding 0
    text-align center
    li
      border 4px solid $blanco
      border-radius 50%
      display inline-block
      height 50px
      list-style none
      opacity .2
      text-align center
      vertical-align middle
      width 50px
      &.activo
        opacity 1
      &.inactivo
        opacity .2
      &:nth-child(2)
        margin 0 20px
  .link-list
    display inline-block
    margin 0
    padding 0
    li
      list-style none
      margin 30px 0
      position relative
      a
        color $blanco
        font-family $uniBold
        font-size 20px
        &:hover
          text-decoration none
          &:before
            -webkit-transform scaleX(1)
            transform scaleX(1)
        &:before
          content ""
          position absolute
          bottom 0
          left 30px
          width 0
          height 2px
          width calc(100% - 30px)
          background-color $blanco
          animation width 0.3s
          -webkit-transform scaleX(0)
          transform scaleX(0)
          -webkit-transition all 0.2s
          transition all 0.2s
          border-radius 2px
  [type="radio"]:checked + label:before,
  [type="radio"]:not(:checked) + label:before
    content ''
    position absolute
    left 0
    top 0
    width 20px
    height 20px
    border 2px solid $blanco
    border-radius 100%
    background transparent

  [type="radio"]:checked + label,
  [type="radio"]:not(:checked) + label
      position relative
      padding-left 35px
      font-size 20px
      cursor pointer
      line-height 20px
      display inline-block
      color $blanco

  [type="radio"]:not(:checked)
    & + label
      &:after
        opacity 0
        -webkit-transform scale(0)
        transform scale(0)

  [type="radio"]:checked + label:after,
  [type="radio"]:not(:checked) + label:after
    content ''
    width 10px
    height 10px
    background $celeste
    position absolute
    top 5px
    left 5px
    border-radius 100%
    -webkit-transition all 0.2s ease
    transition all 0.2s ease

  [type="radio"]:checked
    & + label
      &:after
        opacity 1
        -webkit-transform scale(1)
        transform scale(1)

  [type="radio"]:checked,
  [type="radio"]:not(:checked)
    position absolute
    left -9999px
  .styled-select
    background url('../images/select-down.png') no-repeat 98% 5px
    border-bottom 1px solid $blanco
    color $blanco
    height 46px
    line-height 46px
    overflow hidden
    position relative
    width 100%    
    &:after
      content "\f078"
      color rgba(255,255,255 .4)
      font-family 'FontAwesome'
      display inline-block
      vertical-align middle
      position absolute
      right 0
      top 0
      vertical-align middle
      z-index 0
    .form-control
      background transparent
    select
      background transparent
      -webkit-appearance: inherit
      border none
      width 100%

  .btn-transparent
    background transparent
    border 4px solid $celeste
    border-radius 50px
    color $blanco
    font-family $uniHeavy
    font-size 20px
    padding 6px 45px
    transition .3s all ease
    &:hover
      background $blanco      
      color darken(#74c9d2, 30)
  .btn-upload
    position absolute
    right 0
    top 0
    height 100%
    text-align right
    width 100%
  .contact-list
    margin 0 0 70px 10%
    padding 0
    @media (max-width: 768px)
      margin 0 0 0 10%
    li
      list-style none
      margin 35px 0
      .custom-icon
        color $celeste
        margin-right 45px
      a
        display inline-block
        vertical-align middle
  .backgorund-logo
    height auto!important
    background-repeat no-repeat
    background-size cover
    @media (max-width: 768px)
      padding-top 100px!important
      padding-bottom 100px!important
  .icon-mail
    font-size 30px
    line-height 45px
  .btn-reload
    background none 
    border 3px solid $celeste
    border-radius 50%
    color $blanco
    display inline-block
    text-align center
    padding 5px
    line-height 30px
    height 50px
    width 50px
    i
      font-size 30px
      height 30px
      width 30px